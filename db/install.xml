<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/messagestream/db" VERSION="2025051600" COMMENT="XMLDB file for messagestream module" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
